{
  "name": "@xilehud/overlay",
  "version": "0.4.1",
  "description": "XileHUD",
  "main": "dist/main/main.js",
  "scripts": {
    "check:images": "node scripts/check-images.js",
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsx watch src/main/main.ts",
    "dev:renderer": "vite",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc",
    "build:renderer": "vite build",
    "download-images": "tsx scripts/downloadImages.ts",
    "recover-images": "tsx scripts/recover-missing-images.ts",
    "typecheck": "tsc --noEmit",
    "start": "electron dist/main/main.js",
    "pack": "electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:unsigned": "cross-env WIN_CODESIGN=skip npm run build && electron-builder",
    "publish:github": "npm run build && electron-builder --publish always"
  },
  "keywords": [
    "poe2",
    "overlay",
    "modifiers",
    "electron"
  ],
  "author": "XileHUD",
  "license": "GPL-3.0-only",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "concurrently": "^8.0.0",
    "cross-env": "^7.0.3",
    "electron": "28.3.0",
    "electron-builder": "23.6.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "@xmldom/xmldom": "^0.8.11",
    "clipboardy": "^4.0.0",
    "electron-forge": "^5.2.4",
    "electron-updater": "^6.3.5",
    "uiohook-napi": "^1.5.4",
    "xmldom": "^0.6.0"
  },
  "build": {
    "appId": "com.xilehud.overlay",
    "productName": "XileHUD",
    "copyright": "Copyright Â© 2025 XileHUD",
    "directories": {
      "output": "dist_electron",
      "buildResources": "build"
    },
    "files": [
      "dist/**",
      "xile512.ico",
      "xile512.png"
    ],
    "extraResources": [
      {
        "from": "data/poe1",
        "to": "data/poe1",
        "filter": [
          "**/*.json"
        ]
      },
      {
        "from": "data/poe2",
        "to": "data/poe2",
        "filter": [
          "**/*.json"
        ]
      },
      {
        "from": "bundled-images",
        "to": "bundled-images",
        "filter": [
          "**/*"
        ]
      }
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "XileHUD",
        "repo": "poe_overlay",
        "private": false
      }
    ],
    "win": {
      "icon": "xile512.ico",
      "artifactName": "XileHUD-Setup-${version}.${ext}",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": ["AppImage"],
      "category": "Utility",
      "executableName": "xilehud",
      "icon": "xile512.png"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowElevation": true,
      "installerIcon": "xile512.ico",
      "uninstallerIcon": "xile512.ico",
      "installerHeaderIcon": "xile512.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "XileHUD",
      "runAfterFinish": true,
      "deleteAppDataOnUninstall": false,
      "displayLanguageSelector": false,
      "warningsAsErrors": false
    }
  }
}
